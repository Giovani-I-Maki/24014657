#include <stdio.h>

int main(){

	float Receita, Despesa, valortotal;//variaveis

	printf("coloque sua Receita: ");//salva o saldo
	scanf("%f",&Receita);

	printf("coloque sua Despesa: ");//salva o debito
	scanf("%f",&Despesa);

	valortotal = (Receita - Despesa);//calculos
	printf("seu total foi:%.2f",valortotal);//mostra os valores %.2f serve para limitar as casas que serao mostradas 

}
